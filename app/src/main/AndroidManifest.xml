<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.octopathmapper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cyrus_sprite_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cyrus_sprite_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OctopathMapper">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OctopathMapper.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>